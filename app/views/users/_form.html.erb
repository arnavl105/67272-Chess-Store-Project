<%= simple_form_for @user, :html => { :class => 'form-horizontal' } do |f| %>

  <fieldset>
    <legend><%= controller.action_name.capitalize %> User </legend>

		<%= f.input :first_name %>
		<%= f.input :last_name %>

		<%= f.input :phone %>
		<%= f.input :email %>
		<%= f.input :username %>
		
		<%= f.input :password %>
		<%= f.input :password_confirmation %>
		

		<% if !current_user.nil? %>
			<%= f.input :active %>
			<%= f.input :role, :collection => User::ROLES, :prompt => true %>
		<% else %>
			<%= f.input :role, as: :hidden, input_html: { value: "customer" } %>
		<% end %>


    <div class="form-actions">
      <%= f.submit nil, :class => 'button radius' %>
      <%= link_to 'Cancel',users_path, :class => 'button alert radius' %>
    </div>
  </fieldset>

<% end %>
