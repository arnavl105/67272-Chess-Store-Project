
<% unless @previous_orders.nil? || @previous_orders.empty? %>

  <h5>Previous Orders</h5>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>School</th>
        <th>Items</th>
        <th>Date Placed</th>
      </tr>
    </thead>
    <tbody>
      <% @previous_orders.each do |order| %>
        <tr>
          <td><%= order.school.name %></td>
          <td>
          <ul><% order.order_items.each do |item| %>
            <li><%= item.item.name %>, <%= item.quantity %></li>
          </ul>
          <% end %>
          </td>
          <td><%= order.date %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% end %>
</div>