<div class="panel clearfix">

<h3>Cart</h3>

<% unless session[:cart].empty? %>
  <div class="panel clearfix">
    <ul>
      <% session[:cart].each do |item_id, quantity| %>
        <li><%= link_to Item.find(item_id).name, item_path(item_id) %>, <%= quantity%></li>
      <% end %>
    </ul>
  </div>
<% else %>
  Your Cart is Empty
<% end %>

</div>