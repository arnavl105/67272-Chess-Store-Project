<%= simple_form_for @order_item, :url => "/update_cart", html: { :class => 'form-horizontal' }, remote: true do |f| %>
  <%= f.input :quantity, label: "Quantity", input_html: {class: "avg"} %>

  <!-- Note in this case that can't use @town; use params[:town_id] -->
  <%= f.input :item_id, as: :hidden, input_html: { value: params[:item_id] } %>

  <p>&nbsp;</p>
  <div class="form-actions">
    <%= f.submit nil, class: 'button tiny radius' %>
    <%= link_to 'Cancel', :back, class: 'button tiny radius alert' %>
  </div>
<% end %>