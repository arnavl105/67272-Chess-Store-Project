<%= render partial: "partials/cart" %>

<%= simple_form_for @order, html: { class: 'form-horizontal', multipart: true } do |f| %>
  <fieldset>
    <legend> Shipping Details </legend>

    <%= f.input :date, as: :hidden, input_html: { value: Date.current } %>
    <%= f.input :user_id, as: :hidden, input_html: { value: current_user.id } %>

    <%= f.input :school_id, collection: School.active.to_a, input_html: {class: "avg"} %>

    <div class="form-actions">
      <%= f.submit 'Next', :class => 'button radius' %>
      <%= link_to 'Cancel', home_path, :class => 'button alert radius' %>
    </div>
  </fieldset>
<% end %>